package cursoJava2024;

public abstract class TrabalhandoComString {

	public static void main(String[] args) {

		String texto = " Bem vindo ao curso de JAVA";
		String texto2 = "Vamos aprende sobre String";
		
		//1.Comprimento da String:
		String nome = "Raphaella Alice Silva Souza";
		System.out.println("Comprimento da String:"+nome.length());
		
		//2.Concatenar String:
		String textoCompleto = texto +" "+ texto2;
		System.out.println("Texto completo: " + textoCompleto);
		String nome2 = "Raphaella";
		String sobreNome = " Alice";		
		System.out.println(nome2 + sobreNome);
		
		//3. Converter paras MAIÚSCYULA E minuscula:
		System.out.println("MAIÚSCULA: " + texto.toUpperCase());
		System.out.println("minusculas:"+ texto.toLowerCase());	
		
		//4. Substistuir umas parte da String: 
		String novoTexto = texto.replace("JAVA", "Raphaella");
		System.out.println("Texto após substituição: " + novoTexto);
		
		//5. Busca por uma subString:
		int posicao = texto.indexOf("curso");
		System.out.println("Posição da palavra 'curso': " + posicao);
		
		//6.Verifica se uma string começa ou termina com 1 subString:
		System.out.println("Começa com 'Bem': " + texto.startsWith("Bem") );
		
		//1 subString
		System.out.println("Termina com 'ruim':" + texto.endwith("ruim") );
		
		
		
		
	}

}
